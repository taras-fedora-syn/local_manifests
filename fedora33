CCACHE

export USE_CCACHE=1
export CCACHE_DIR=~/.ccache
export CCACHE_MAX_SIZE=25G
ccache -M $CCACHE_MAX_SIZE
export _JAVA_OPTIONS="-Xmx4g"

export LC_ALL=C

make clean && make mrproper

